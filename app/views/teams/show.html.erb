<head>
  <title>CSGOCONFIG</title>

  <!-- Custom Fonts -->
  <link href="https://blackrockdigital.github.io/startbootstrap-creative/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">

</head>

<body>

  <!-- NavBar -->
  <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-left">
                <li>
                    <%= link_to "CSGOCONFIG", welcome_index_path%>
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <li>
                      <%= link_to "Home", welcome_index_path%>
                  </li>
                  <li>
                      <%= link_to "Teams", teams_path%>
                  </li>
                  <li>
                      <%= link_to "Players", players_path%>
                  </li>
              </ul>
          </div>
          <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
  </nav>

  <!-- Search -->
  <section class="bg-dark" id="about">
      <div class="container">
          <div class="row">
              <div class="col-lg-8 col-lg-offset-2 text-center">
                  <h2 class="section-heading">TEAM <%=(@team.teamName).upcase%></h2>
                  <hr class="light">
                  <p class="text-faded">Top Teams. Top Pros. Hand-picked by CSGOCONFIG.</p>
                  <br></br>
                  <a href="#services" class="page-scroll btn-round-lg btn-xl">Explore Now</a>
              </div>
          </div>
      </div>
  </section>

  <!-- Page Features -->
  <div class="row text-center" id = "services">
    <% @players.each do |player| %>
      <div class="col-md-3 col-sm-6 hero-feature">
          <div class="thumbnail">
              <!-- <img src="http://placehold.it/800x500" alt=""> -->
              <div class="caption">
                  <h3><%= player.playerName %></h3>
                  <p>eDPI: <%=(player.dpi * player.gameSens).round%></p>
                  <p>
                      <a href="<%=player_path(player)%>" class="btn btn-default">INFO</a>
                      <!-- <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>  -->
                  </p>
              </div>
          </div>
      </div>
    <% end %>
  </div>

  <!-- View All -->
  <section class="no-padding" id="contact">
    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <p>VIEW OTHER TEAM'S ROSTER</p>
                <br></br>
                <a href= "<%=teams_path%>" class="btn-round-lg btn-xl">Discover More</a>
            </div>
        </div>
    </aside>
  </section>

  <!-- Plugin JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
  <script src="https://blackrockdigital.github.io/startbootstrap-creative/vendor/scrollreveal/scrollreveal.min.js"></script>
  <script src="https://blackrockdigital.github.io/startbootstrap-creative/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

  <!-- Theme JavaScript -->
  <script src="https://blackrockdigital.github.io/startbootstrap-creative/js/creative.min.js"></script>

</body>
